{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@interview/ui": ["../../../packages/ui/src"],
      "@interview/utils": ["../../../packages/utils/src"],
      "@interview/config": ["../../../packages/config/src"],
      "@interview/types": ["../../../packages/types/src"]
    }
  },
  "include": [
    "../src/**/*",
    "../../../packages/ui/src/**/*",
    "../../../packages/utils/src/**/*",
    "../../../packages/config/src/**/*",
    "../../../packages/types/src/**/*",
    "./css.d.ts",
    "../src/types/css.d.ts"
  ],
  "exclude": ["node_modules"]
}